@model GlobalInvest.Models.Fund
@{
    ViewData["Title"] = "Skapa Fond";
}

<div class="container">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Namn</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Valuta</label>
            <input asp-for="Currency" class="form-control" required />
        </div>
        <div class="d-flex justify-content-center gap-2 mt-3">
            <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
            <button type="submit" class="btn btn-success">Spara</button>
        </div>
    </form>
</div>